# 0. BUILD STAGE
FROM ekidd/rust-musl-builder:nightly-2021-12-23 AS build
# only build deps in the first stage for faster builds
COPY Cargo.toml Cargo.lock ./
USER root
RUN cargo install cargo-build-deps
RUN cargo build-deps --release
RUN rm -f target/x86_64-unknown-linux-musl/release/deps/rust-web-server*
# build
COPY --chown=root:root src src
RUN cargo build --bin main
RUN strip target/x86_64-unknown-linux-musl/debug/main
RUN useradd -u 108934 -N h

# 1. APP STAGE
FROM scratch
WORKDIR /app
COPY --from=build /home/rust/src/target/x86_64-unknown-linux-musl/debug/main ./h
COPY --from=build /etc/passwd /etc/passwd
COPY config.yml /config.yml
USER h
STOPSIGNAL SIGKILL

# run it 
ENTRYPOINT ["./h"]
